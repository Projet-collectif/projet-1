<form method="post" action="{{ path('admin_blog_delete', {'id': blog.id}) }}" onsubmit="return confirm('{{ "YOUR-ARE-SURE"|trans({"%delete%":blog.title}) }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
    <button class="btn btn-transparent"><span class="fas fa-trash-alt"></span></button>
</form>
