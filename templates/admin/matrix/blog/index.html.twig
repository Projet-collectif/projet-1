{% extends 'admin/matrix/base.html.twig' %}

{% block title %}{{ 'BLOG'|trans|raw }}{% endblock %}

{% block stylesheets %}
<link href="{{ asset('admin/matrix/assets/extra-libs/Datatables/dataTables.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">{{ 'BLOG'|trans|raw }}</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'HOME'|trans|raw }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'BLOG'|trans|raw }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <a href="{{ path('admin_blog_new') }}" class="btn btn-success"><span class="fas fa-plus-circle mr-2"></span>{{ 'ADD-BLOG'|trans|raw }}</a>
                    <hr class="mt-3 mb-5">
                    <div class="table-responsive">
                        <table id="datatable" data-controller="{{ controller_name }}" class="table table-striped table-bordered no-wrap datatable-blog">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>{{ 'TITLE'|trans|raw }}</th>
                                    <th>{{ 'AUTHOR'|trans|raw }}</th>
                                    <th>{{ 'CREATED'|trans|raw }}</th>
                                    <th>{{ 'HITS'|trans|raw }}</th>
                                    <th>{{ 'PUBLISH'|trans|raw }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for blog in blogs %}
                                <tr id="{{ blog.id }}">
                                    <td class="text-center">
                                        {{ include('admin/matrix/blog/_delete_form.html.twig') }}
                                    </td>
                                    <td class="details" title="{{ 'CLICK-DETAILS'|trans|raw }}">{{ blog.title }}</td>
                                    <td class="details" title="{{ 'CLICK-DETAILS'|trans|raw }}">{{ blog.compte.nom }} {{ blog.compte.nom }} ({{ blog.compte.user.roles[0]|replace({'ROLE_':''})|lower }})</td>
                                    <td class="details" title="{{ 'CLICK-DETAILS'|trans|raw }}">{{ blog.created|date("d-m-Y H:i:s") }}</td>
                                    <td class="details" title="{{ 'CLICK-DETAILS'|trans|raw }}">{{ blog.hits }}</td>
                                    <td class="text-center">
                                        {% if blog.publish == true %}
                                        <span id="valid-{{ blog.id }}" data-id="{{ blog.id }}" class="fas fa-check" title="{{ 'CLICK-CHANGE-OPTION'|trans|raw }}"></span>
                                        <span class="display-none">{{ blog.publish }}</span>
                                        {% else %}
                                        <span id="valid-{{ blog.id }}" data-id="{{ blog.id }}" class="fas fa-times" title="{{ 'CLICK-CHANGE-OPTION'|trans|raw }}"></span>
                                        <span class="display-none">{{ blog.publish }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11">{{ 'NO-RECORDS-FOUND'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('admin/matrix/assets/extra-libs/Datatables/dataTables.min.js') }}"></script>
<script src="{{ asset('admin/matrix/assets/extra-libs/Datatables/custom-datatable.js') }}"></script>
{% endblock %}
