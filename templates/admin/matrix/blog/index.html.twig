{% extends 'admin/matrix/base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block stylesheets %}
<link href="{{ asset('admin/matrix/assets/extra-libs/Datatables/dataTables.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Blog</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('admin') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Blog</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <a href="{{ path('admin_blog_new') }}" class="btn btn-success"><span class="fas fa-plus-circle mr-2"></span>{{ 'ADD-BLOG'|trans|raw }}</a>
                    <hr class="mt-3 mb-5">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-striped table-bordered no-wrap datatable-blog">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>{{ 'TITLE'|trans|raw }}</th>
                                    <th>{{ 'AUTHOR'|trans|raw }}</th>
                                    <th>{{ 'CREATED'|trans|raw }}</th>
                                    <th>{{ 'HITS'|trans|raw }}</th>
                                    <th>{{ 'PUBLISH'|trans|raw }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for data in blogs %}
                                <tr id="{{ data.id }}">
                                    <td class="text-center"><span data-id="{{ data.id }}" data-projet="{{ data.title }}" class="fas fa-trash-alt"></span></td>
                                    <td class="details" title="{{ 'CLICK-DETAILS'|trans|raw }}">{{ data.title }}</td>
                                    <td class="details" title="{{ 'CLICK-DETAILS'|trans|raw }}">{{ data.title }}</td>
                                    <td class="details" title="{{ 'CLICK-DETAILS'|trans|raw }}">{{ data.created|date("d-m-Y H:i:s") }}</td>
                                    <td class="details" title="{{ 'CLICK-DETAILS'|trans|raw }}">{{ data.hits }}</td>
                                    <td class="text-center">
                                    {% if data.publish == true %}
                                    <span id="valid-{{ data.id }}" data-id="{{ data.id }}" class="fas fa-check" title="{{ 'CLICK-CHANGE-OPTION'|trans|raw }}"></span><span class="display-none">{{ data.publish }}</span>
                                    {% else %}
                                    <span id="valid-{{ data.id }}" data-id="{{ data.id }}" class="fas fa-times" title="{{ 'CLICK-CHANGE-OPTION'|trans|raw }}"></span><span class="display-none">{{ data.publish }}</span>
                                    {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('admin/matrix/assets/extra-libs/Datatables/dataTables.min.js') }}"></script>
<script src="{{ asset('admin/matrix/assets/extra-libs/Datatables/custom-datatable.js') }}"></script>
<script src="{{ asset('admin/matrix/assets/extra-libs/Datatables/blog/custom-edit-blog.js') }}"></script>
{% endblock %}
