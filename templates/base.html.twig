{% set route = app.request.attributes.get('_route') %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="keywords" content="{% block metaKey %}{% endblock %}" />
        <meta name="description" content="{% block metaDesc %}{% endblock %}" />
        <meta name="author" content="{{ sitename }}" />
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">
        <title>{% block title %}{% endblock %}</title>
        <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/2c00f0cdec.js"></script>
        <link rel="stylesheet" href="{{ asset('css/boostrap4-4-1.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css')}}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
          <nav class="navbar navbar-expand-lg navbar-light">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand ml-auto" href="{{ path('home') }}"><img src="{{ asset('images/logo.png') }}" alt="logo_team"></a>
          
            <div class="collapse navbar-collapse text-center" id="navbarTogglerDemo03">
              <ul class="navbar-nav m-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                  <a class="nav-link" href="{{ path('home') }}">{{ 'HOME'|trans }} <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('home') }}">Espace Client</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('home') }}">Espace DÃ©veloppeur</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('blog_index', {'page':1}) }}">Blog</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('contact') }}">Nous contacter</a>
                </li>
                {% if is_granted('ROLE_USER') == true %}
                  {% if is_granted('ROLE_ADMIN') == true %}
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin') }}">{{ 'ADMINISTRATION'|trans|raw }}</a>
                  </li>
                  {% endif %}
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">{{ 'LOGOUT'|trans|raw }}</a>
                  </li>
                {% else %}
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">{{ 'LOGIN'|trans|raw }}</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}">{{ 'REGISTER'|trans|raw }}</a>
                  </li>
                {% endif %}
              </ul>
            </div>
            <div>
              
          </nav>
          
          <div class="header">

            <!--Content before waves-->
          <svg class="waves" xmlns="http://www.w3.org/2000/svg"
              viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
              <defs>
              <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
              </defs>
              <g class="parallax">
              <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.7" />
              <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)" />
              <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.3)" />
              <use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
              </g>
              </svg>
              </div>
        </header> 

        {% block body %}{% endblock %}

        <footer>
          <p class="text-center p-5">{{ 'COPYRIGHT'|trans({"%date%":"now"|date("Y"), "%sitename%":sitename})|raw }}</p>
        </footer>

        <script src="{{ asset('js/jquery-3-4-1.js') }}"></script>
        <script src="{{ asset('js/popper.js') }}"></script>
        <script src="{{ asset('js/js-boostrap4-4-1.js') }}"></script>
        <script src="{{ asset('js/custom.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
