{% set route = app.request.attributes.get('_route') %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="keywords" content="{% block metaKey %}{% endblock %}" />
        <meta name="description" content="{% block metaDesc %}{% endblock %}" />
        <meta name="author" content="{{ sitename }}" />
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">
        <title>{% block title %}{% endblock %}</title>
        <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/2c00f0cdec.js"></script>
        <link rel="stylesheet" href="{{ asset('css/boostrap4-4-1.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css')}}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand mr-auto" href="{{ path('home') }}"><img src="{{ asset('images/logo.png') }}" alt="logo_team"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
                 
          <div class="collapse navbar-collapse text-center" id="navbarTogglerDemo03">
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
              <li class="nav-item active">
                <a class="nav-link" href="{{ path('home') }}">{{ 'HOME'|trans }} <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Services</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('blog') }}">Blog</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('contact') }}">Nous contacter</a>
              </li>
              {% if is_granted('ROLE_USER') == true %}
                {% if is_granted('ROLE_ADMIN') == true %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('admin') }}">{{ 'ADMINISTRATION'|trans|raw }}</a>
                </li>
                {% endif %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_logout') }}">{{ 'LOGOUT'|trans|raw }}</a>
                </li>
              {% else %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_login') }}">{{ 'LOGIN'|trans|raw }}</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_register') }}">{{ 'REGISTER'|trans|raw }}</a>
                </li>
              {% endif %}
            </ul>
          </div>
          <div>
        </nav>
      </header>


          

        {% block body %}{% endblock %}

      <div class="row">
        <div class="col-12">
          <footer>
            <p class="text-center p-5">{{ 'COPYRIGHT'|trans({"%date%":"now"|date("Y"), "%sitename%":sitename})|raw }}</p>
          </footer>
        </div>
      </div>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="{{ asset('js/custom.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
