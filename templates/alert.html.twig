{% if app.alert is defined and app.alert is not empty %}
  {% if app.alert.type == "error" %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h4 class="alert-heading">{{ 'ALERT-ALERT'|trans|raw }}</h4>
      <p>{{ app.alert.message|raw }}</p>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {% endif %}
  {% if app.alert.type == "success" %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <h4 class="alert-heading">{{ 'ALERT-SUCCESS'|trans|raw }}</h4>
      <p>{{ app.alert.message|raw }}</p>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {% endif %}
  {% if app.alert.type == "warning" %}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <h4 class="alert-heading">{{ 'ALERT-WARNING'|trans|raw }}</h4>
      <p>{{ app.alert.message|raw }}</p>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {% endif %}
  {% if app.alert.type == "info" %}
    <div class="alert alert-info alert-dismissible fade show" role="alert">
      <h4 class="alert-heading">{{ 'ALERT-INFO'|trans|raw }}</h4>
      <p>{{ app.alert.message|raw }}</p>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {% endif %}
{% endif %}
